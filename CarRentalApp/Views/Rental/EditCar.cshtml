@model CarRentalApp.Models.Car

@{
    ViewData["Title"] = "EditCar";
}

<h1>Edit Car</h1>
@if (this.Model.Available)
//trochge nie mvc way chyba
{
    <h4>Car</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditCar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control"/>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Make" class="control-label"></label>
                    <input asp-for="Make" class="form-control"/>
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MfYear" class="control-label"></label>
                    <input asp-for="MfYear" class="form-control"/>
                    <span asp-validation-for="MfYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Cars">Back to List</a>
    </div>
}
else
{
    <h3>Car is not available, you can't edit it</h3>
    <div>
        <a asp-action="Cars">Back to List</a>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
